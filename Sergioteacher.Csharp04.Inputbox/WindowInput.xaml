<Window x:Class="Sergioteacher.Csharp04.Inputbox.WindowInput"
        x:Name="VentanaInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sergioteacher.Csharp04.Inputbox"
        mc:Ignorable="d"
        Title="WindowInput" Closing="VentanaInput_Closing" Activated="VentanaInput_Activated" Height="200" Width="500" Background="Olive" FontSize="24">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Content="Introduciendo datos ..." Grid.Row="0"  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
        <TextBox x:Name="MiTexto" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Height="28" TextWrapping="NoWrap"  Text="" Width="400"/>
        <Button x:Name="BIntro" Click="BIntro_Click" Content="Ok"  Grid.Row="2" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="100" />
    </Grid>
</Window>
